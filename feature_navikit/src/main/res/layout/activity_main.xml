<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarNaviKitInfo"
        style="@style/ToolbarAppearance.ExploreHMS.Normal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Navi Kit" />

    <ScrollView
        android:id="@+id/layScroll_navikit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLetsStart_navikit"
        app:layout_constraintTop_toBottomOf="@+id/toolbarNaviKitInfo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvNaviIntroduction_info"
                style="@style/TextAppearance.ExploreHMS.Headline6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/introduction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvIntroduction_navikit"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/service_introducttion_text_of_navikit"
                app:layout_constraintEnd_toEndOf="@+id/tvNaviIntroduction_info"
                app:layout_constraintStart_toStartOf="@+id/tvNaviIntroduction_info"
                app:layout_constraintTop_toBottomOf="@+id/tvNaviIntroduction_info" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivHeader_navikit"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/tvIntroduction_navikit"
                app:layout_constraintHeight_percent=".2"
                app:layout_constraintStart_toStartOf="@+id/tvIntroduction_navikit"
                app:layout_constraintTop_toBottomOf="@id/tvIntroduction_navikit"
                app:srcCompat="@drawable/navi_kit" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvServiceIntroductionHeader_navikit"
                style="@style/TextAppearance.ExploreHMS.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/it_mainly_provides_the_following_functions"
                app:layout_constraintEnd_toEndOf="@+id/ivHeader_navikit"
                app:layout_constraintStart_toStartOf="@+id/ivHeader_navikit"
                app:layout_constraintTop_toBottomOf="@+id/ivHeader_navikit" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvServiceIntroductionBody_navikit"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/tvServiceIntroductionHeader_navikit"
                app:layout_constraintStart_toStartOf="@+id/tvServiceIntroductionHeader_navikit"
                app:layout_constraintTop_toBottomOf="@+id/tvServiceIntroductionHeader_navikit" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivInfo_navikit"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="@+id/tvServiceIntroductionBody_navikit"
                app:layout_constraintHeight_percent=".6"
                app:layout_constraintStart_toStartOf="@+id/tvServiceIntroductionBody_navikit"
                app:layout_constraintTop_toBottomOf="@+id/tvServiceIntroductionBody_navikit"
                app:srcCompat="@drawable/function" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvServiceScenariosHeader_navikit"
                style="@style/TextAppearance.ExploreHMS.Headline6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/service_scenarios"
                app:layout_constraintEnd_toEndOf="@+id/ivInfo_navikit"
                app:layout_constraintStart_toStartOf="@+id/ivInfo_navikit"
                app:layout_constraintTop_toBottomOf="@+id/ivInfo_navikit" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvServiceScenariosBody_navikit"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/tvServiceScenariosHeader_navikit"
                app:layout_constraintStart_toStartOf="@+id/tvServiceScenariosHeader_navikit"
                app:layout_constraintTop_toBottomOf="@+id/tvServiceScenariosHeader_navikit" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLetsStart_navikit"
        style="@style/ButtonAppearance.ExploreHMS.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/btn_lets_try"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>