<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rl_create_model"
            android:layout_width="match_parent"
            android:fontFamily="@font/din_pro_light"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/whiteBG"
            android:text="@string/create_modeling"
            android:textAllCaps="false"
            android:background="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rl_create_material"
            android:layout_width="match_parent"
            android:fontFamily="@font/din_pro_light"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/whiteBG"
            android:text="@string/create_materials"
            android:textAllCaps="false"
            android:background="@color/colorPrimary" >
        </com.google.android.material.button.MaterialButton>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_80"
            android:layout_marginLeft="@dimen/dimens_16"
            android:layout_marginTop="@dimen/dimens_24"
            android:layout_marginRight="@dimen/dimens_16"
            android:background="@drawable/mine_login_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_my_model"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_model_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/splash_text_color"
                        android:textSize="@dimen/dimens_24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimens_3"
                        android:text="@string/mine_model_text"
                        android:textColor="@color/splash_text_color"
                        android:textSize="@dimen/dimens_14sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dimens_1px"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimens_12"
                android:layout_marginBottom="@dimen/dimens_12"
                android:background="@color/splits_line_color" />

            <RelativeLayout
                android:id="@+id/rl_my_material"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_material_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/splash_text_color"
                        android:textSize="@dimen/dimens_24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimens_3"
                        android:text="@string/mine_material_text"
                        android:textColor="@color/splash_text_color"
                        android:textSize="@dimen/dimens_14sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>