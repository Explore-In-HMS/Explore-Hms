<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keyring.KeyringServiceIntroductionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_keyring"
        style="@style/ToolbarAppearance.Sandbox.Normal"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/title_keyring" />

    <TextView
        android:id="@+id/service_introduction"
        style="@style/TextAppearance.Sandbox.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:text="@string/service_introduction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_keyring" />

    <TextView
        android:id="@+id/txt_earlyaccess"
        style="@style/TextAppearance.Sandbox.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:text="@string/txt_keyring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_introduction" />

    <ImageView
        android:id="@+id/img_earlyaccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/h16"
        android:adjustViewBounds="true"
        android:src="@drawable/keyring"
        app:layout_constraintTop_toBottomOf="@+id/txt_earlyaccess" />

    <Button
        android:id="@+id/btn_keyring_example"
        android:layout_width="match_parent"
        android:onClick="runKeyringExample"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/h16"
        android:text="@string/keyring_service_example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_earlyaccess">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>