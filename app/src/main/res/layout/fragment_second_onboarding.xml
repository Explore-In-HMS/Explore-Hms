<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hms.explorehms.onboarding.fragments.SecondOnboardingFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_onboarding"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivTabLayoutSS_onboarding2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:scaleType="fitXY"
        android:src="@drawable/bg_onboarding2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTabInfo_onboarding2"
        style="@style/TextAppearance.ExploreHMS.Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tabbed design"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        app:layout_constraintTop_toBottomOf="@+id/ivTabLayoutSS_onboarding2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTabInfo2_onboarding2"
        style="@style/TextAppearance.ExploreHMS.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tab_information_onboarding2"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        app:layout_constraintTop_toBottomOf="@+id/tvTabInfo_onboarding2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5"
        android:id="@+id/guideline1"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivClick_onboarding2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_click"
        app:layout_constraintTop_toBottomOf="@+id/tvTabInfo2_onboarding2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivSwipe_onboarding2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_swipe"
        app:layout_constraintTop_toBottomOf="@+id/tvTabInfo2_onboarding2"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvClickSwipeInfo"
        style="@style/TextAppearance.ExploreHMS.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/swipe_click_info_onboarding2"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        app:layout_constraintTop_toBottomOf="@+id/ivClick_onboarding2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>