<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_address_1"
        style="@style/TextAppearance.ExploreHMS.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintBottom_toTopOf="@+id/tv_address_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Site: 1" />

    <TextView
        android:id="@+id/tv_address_name"
        style="@style/TextAppearance.ExploreHMS.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintBottom_toTopOf="@+id/tv_address_country"
        app:layout_constraintStart_toStartOf="@+id/tv_address_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_1"
        tools:text="Name: Turkey" />

    <TextView
        android:id="@+id/tv_address_country"
        style="@style/TextAppearance.ExploreHMS.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintBottom_toTopOf="@+id/tv_address_admin_area"
        app:layout_constraintStart_toStartOf="@+id/tv_address_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_name"
        tools:text="Country: Turkey" />

    <TextView
        android:id="@+id/tv_address_admin_area"
        style="@style/TextAppearance.ExploreHMS.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_address_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_country"
        tools:text="Admin Area: Turkey" />

    <View
        android:id="@+id/separatorItem_sitekit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray1nt"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_admin_area" />

</androidx.constraintlayout.widget.ConstraintLayout>

