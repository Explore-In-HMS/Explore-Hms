<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view"
            style="@style/TextAppearance.Sandbox.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/h16"
            android:text="@string/service_introduction"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tvSiteKitDetail"
            style="@style/TextAppearance.Sandbox.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/h16"
            android:text="@string/site_kit_information"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view"
            tools:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/service_quoto_info_image"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="@dimen/h16"
            android:layout_marginTop="@dimen/h16"
            android:layout_marginEnd="@dimen/h16"
            android:src="@drawable/service_quota"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSiteKitDetail"
            tools:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_keyword_search"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/h16"
            android:text="@string/button_keyword_search_sitekit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/service_quoto_info_image"
            tools:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_nearby_search"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/h16"
            android:text="@string/button_nearby_search_sitekit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_keyword_search"
            tools:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_suggestion"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/h16"
            android:text="@string/button_search_suggestion_sitekit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_nearby_search"
            tools:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_widget"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/h16"
            android:text="@string/site_kit_widget_text_sitekit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_suggestion"
            tools:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_autocomplete"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/h16"
            android:layout_marginBottom="@dimen/h16"
            android:text="@string/site_kit_autocomplete_text_sitekit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_widget"
            tools:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>