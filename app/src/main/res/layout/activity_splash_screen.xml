<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_splash_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_onboarding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/iv_icon_app_splash_screen"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible">
    </ImageView>


    <ImageView
        android:id="@+id/iv_huawei_logo_splash_screen"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/app_logo"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon_app_splash_screen"
        app:layout_constraintLeft_toLeftOf="@+id/iv_icon_app_splash_screen"
        app:layout_constraintRight_toRightOf="@+id/iv_icon_app_splash_screen"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_app_splash_screen"
        tools:visibility="visible">

    </ImageView>

    <ImageView
        android:id="@+id/iv_account_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_accounts"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_app_splash_screen"
        app:layout_constraintLeft_toLeftOf="@+id/iv_icon_app_splash_screen"
        android:layout_marginTop="13dp"
        android:visibility="invisible"
        android:layout_marginStart="11dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_dynamic_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_dynamictagmanager"
        app:layout_constraintTop_toBottomOf="@+id/iv_account_kit_splash_screen"
        app:layout_constraintLeft_toLeftOf="@+id/iv_icon_app_splash_screen"
        android:layout_marginTop="13dp"
        android:visibility="invisible"
        android:layout_marginStart="11dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_game_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_gameservices"
        app:layout_constraintTop_toBottomOf="@+id/iv_dynamic_kit_splash_screen"
        app:layout_constraintLeft_toLeftOf="@+id/iv_icon_app_splash_screen"
        android:layout_marginTop="13dp"
        android:visibility="invisible"
        android:layout_marginStart="11dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_iap_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_iap"
        app:layout_constraintTop_toTopOf="@+id/iv_account_kit_splash_screen"
        app:layout_constraintLeft_toRightOf="@+id/iv_account_kit_splash_screen"
        android:visibility="invisible"
        android:layout_marginStart="13dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_hiai_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_hiai"
        app:layout_constraintTop_toTopOf="@+id/iv_push_kit_splash_screen"
        app:layout_constraintRight_toLeftOf="@+id/iv_push_kit_splash_screen"
        android:layout_marginEnd="14dp"
        android:visibility="invisible"
        android:layout_marginTop="1dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_ads_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_adskit"
        app:layout_constraintTop_toBottomOf="@+id/iv_game_kit_splash_screen"
        app:layout_constraintLeft_toLeftOf="@+id/iv_icon_app_splash_screen"
        android:layout_marginTop="12dp"
        android:visibility="invisible"
        android:layout_marginStart="11dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_ml_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_mlkit"
        app:layout_constraintTop_toTopOf="@+id/iv_ads_kit_splash_screen"
        app:layout_constraintLeft_toRightOf="@+id/iv_ads_kit_splash_screen"
        android:visibility="invisible"
        android:layout_marginStart="13dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_push_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_pushkit"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_app_splash_screen"
        app:layout_constraintRight_toRightOf="@+id/iv_icon_app_splash_screen"
        android:visibility="invisible"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="12dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_map_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_mapkit"
        app:layout_constraintTop_toBottomOf="@+id/iv_push_kit_splash_screen"
        app:layout_constraintRight_toRightOf="@+id/iv_icon_app_splash_screen"
        android:visibility="invisible"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_analytics_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_analyticskit"
        app:layout_constraintTop_toBottomOf="@+id/iv_map_kit_splash_screen"
        app:layout_constraintRight_toRightOf="@+id/iv_icon_app_splash_screen"
        android:visibility="invisible"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="12dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_site_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_sitekit"
        app:layout_constraintTop_toBottomOf="@+id/iv_analytics_kit_splash_screen"
        app:layout_constraintRight_toRightOf="@+id/iv_icon_app_splash_screen"
        android:visibility="invisible"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="12dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_ar_kit_splash_screen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_arengine"
        app:layout_constraintTop_toTopOf="@+id/iv_site_kit_splash_screen"
        app:layout_constraintRight_toLeftOf="@+id/iv_site_kit_splash_screen"
        android:visibility="invisible"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="13dp">
    </ImageView>

    <ImageView
        android:id="@+id/iv_app_name_splash_screen"
        android:layout_width="220dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_app_splash_screen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/icon_app_name_splash_screen"
        android:layout_marginTop="16dp"
        android:visibility="invisible">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>