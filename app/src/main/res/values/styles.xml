        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ExploreHMS.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ExploreHMS.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
