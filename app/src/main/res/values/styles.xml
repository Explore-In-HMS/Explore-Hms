<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorCream</item>
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
    </style>

    <style name="ToolbarAppearance.ExploreHMS.Normal" parent="Widget.MaterialComponents.Toolbar">
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foregroundTint">@color/colorCream</item>
        <item name="titleTextColor">@color/colorCream</item>
        <item name="action">@color/colorCream</item>


    </style>

    <style name="ButtonAppearance.ExploreHMS.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAppearance.ExploreHMS.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAppearance.ExploreHMS.Normal" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.ExploreHMS.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ExploreHMS.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
