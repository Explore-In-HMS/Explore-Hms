<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/bg_white_sq"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tv_select_english"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@drawable/selector_text_lang_select"
            android:text="English">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/gray200" />

        <TextView
            android:id="@+id/tv_select_latin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@drawable/selector_text_lang_select"
            android:text="Latin">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/gray200" />

        <TextView
            android:id="@+id/tv_select_simple_cn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@drawable/selector_text_lang_select"
            android:text="Simplified Chinese">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/gray200" />

        <TextView
            android:id="@+id/tv_select_japanese"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@drawable/selector_text_lang_select"
            android:text="Japanese">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/gray200" />

        <TextView
            android:id="@+id/tv_select_korean"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@drawable/selector_text_lang_select"
            android:text="Korean">
        </TextView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>