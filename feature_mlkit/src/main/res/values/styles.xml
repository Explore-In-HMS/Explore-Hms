<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorCream</item>
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
    </style>

    <style name="ToolbarAppearance.ExploreHMS.Normal" parent="Widget.MaterialComponents.Toolbar">
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foregroundTint">@color/colorCream</item>
        <item name="titleTextColor">@color/colorCream</item>
    </style>

    <style name="ButtonAppearance.ExploreHMS.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonAppearance.ExploreHMS.Normal" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteBG</item>
        <item name="android:iconTint">@color/whiteBG</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.ExploreHMS.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ExploreHMS.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/din_pro</item>
        <item name="fontFamily">@font/din_pro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ExploreHMS.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackBG</item>
    </style>


    <style name="TextAppearance.ExploreHMS.Body3" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blackBG</item>
    </style>

    <style name="TextAppearance.ExploreHMS.Body4" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/blackBG</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue500</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="BottomDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnim</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_dialog_in</item>
    </style>
    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.25dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:background">@color/color_red</item>
    </style>
</resources>