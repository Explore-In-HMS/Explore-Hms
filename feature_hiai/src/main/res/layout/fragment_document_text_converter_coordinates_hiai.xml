<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/view_light_border_light_gray_arengine">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/seperator_document_text_converter_text_result_hiai"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray1"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent">
            </View>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_document_text_converter_coordinates_image_image_kit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.ExploreHMS.Body2"
                android:layout_margin="16dp"
                android:text="@string/txt_document_text_converter_result_image_hiai"
                android:layout_gravity="center"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@+id/seperator_document_text_converter_text_result_hiai">
            </com.google.android.material.textview.MaterialTextView>

            <ImageView
                android:id="@+id/iv_document_text_converter_coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/view_border_black_white_back_hiai"
                app:layout_constraintTop_toBottomOf="@+id/tv_document_text_converter_coordinates_image_image_kit">
            </ImageView>

            <View
                android:id="@+id/seperator_document_text_converter_image_image_kit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorGray1HiAi"
                app:layout_constraintTop_toBottomOf="@+id/iv_document_text_converter_coordinates">
            </View>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_document_text_converter_coordinates_image_kit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_margin="16dp"
                android:text="@string/txt_document_text_converter_coordinates_hiai"
                android:layout_gravity="center"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@+id/seperator_document_text_converter_image_image_kit">
            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_document_text_converter_coordinate_result_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@+id/tv_document_text_converter_coordinates_image_kit">
            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_document_text_converter_coordinate_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tv_document_text_converter_coordinate_result_text">
            </com.google.android.material.textview.MaterialTextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>