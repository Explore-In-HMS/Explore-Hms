<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_aesthetics_score_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_image_category_label_content_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.ExploreHMS.Body1"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:gravity="center">
        </com.google.android.material.textview.MaterialTextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray1HiAi">
        </View>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.ExploreHMS.Body1"
            android:layout_margin="16dp"
            android:text="@string/txt_image_category_labeling_label_contents_id_hiai"
            android:layout_gravity="center"
            android:gravity="start">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_image_category_label_content_label_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.ExploreHMS.Body1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:gravity="start">
        </com.google.android.material.textview.MaterialTextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray1HiAi">
        </View>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.ExploreHMS.Body1"
            android:layout_margin="16dp"
            android:text="@string/txt_image_category_labeling_label_contents_probability_hiai"
            android:layout_gravity="center"
            android:gravity="start">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_image_category_label_content_label_probability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.ExploreHMS.Body1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:gravity="start">
        </com.google.android.material.textview.MaterialTextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>