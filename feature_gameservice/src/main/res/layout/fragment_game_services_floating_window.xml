<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GameServicesFloatingWindowFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeaderFW_gameservices"
        style="@style/TextAppearance.ExploreHMS.Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:text="Service Introduction"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvInfoFW_gameservices"
        style="@style/TextAppearance.ExploreHMS.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:text="@string/floatingwindow_gameservices"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderFW_gameservices" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvPrecautionsFW_gameservices"
        style="@style/TextAppearance.ExploreHMS.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:text="@string/fw_precautions_gameservices"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoFW_gameservices" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShowFW_gameservices"
        style="@style/ButtonAppearance.ExploreHMS.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:text="@string/show_floating_window"
        app:layout_constraintTop_toBottomOf="@+id/tvPrecautionsFW_gameservices" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHideFW_gameservices"
        style="@style/ButtonAppearance.ExploreHMS.Outline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:text="@string/hide_floating_window"
        app:layout_constraintTop_toBottomOf="@+id/btnShowFW_gameservices" />


</androidx.constraintlayout.widget.ConstraintLayout>