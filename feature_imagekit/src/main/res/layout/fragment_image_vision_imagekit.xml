<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/service_introduction"
                style="@style/TextAppearance.ExploreHMS.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="@dimen/h16"
                android:layout_marginEnd="@dimen/h16"
                android:text="@string/service_introduction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_view_img_kit"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/h16"
                android:text="@string/txt_image_vision_service_introduction"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/service_introduction" />

            <ImageView
                android:id="@+id/banner_img_kit"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="@dimen/h16"
                android:layout_marginEnd="@dimen/h16"
                android:background="@drawable/view_border_black_white_back_image_kit"
                android:src="@drawable/banner_image_kit"
                app:layout_constraintTop_toBottomOf="@+id/text_view_img_kit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_image_vision_filter_imagekit"
                style="@style/ButtonAppearance.ExploreHMS.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="@dimen/h16"
                android:layout_marginEnd="@dimen/h16"
                android:text="@string/txt_filter_service_image_kit"
                app:layout_constraintTop_toBottomOf="@+id/banner_img_kit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_image_vision_smart_layout_imagekit"
                style="@style/ButtonAppearance.ExploreHMS.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/h16"
                android:text="Smart Layout Service"
                app:layout_constraintTop_toBottomOf="@+id/tv_image_vision_filter_imagekit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_image_vision_theme_tagging_imagekit"
                style="@style/ButtonAppearance.ExploreHMS.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/h16"
                android:text="@string/txt_theme_tagging_image_kit"
                app:layout_constraintTop_toBottomOf="@+id/tv_image_vision_smart_layout_imagekit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_image_vision_sticker_service_imagekit"
                style="@style/ButtonAppearance.ExploreHMS.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/h16"
                android:text="@string/txt_sticker_service_image_kit"
                app:layout_constraintTop_toBottomOf="@+id/tv_image_vision_theme_tagging_imagekit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_image_vision_image_cropping_imagekit"
                style="@style/ButtonAppearance.ExploreHMS.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/h16"
                android:layout_marginBottom="16dp"
                android:text="@string/txt_image_cropping_image_kit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_image_vision_sticker_service_imagekit" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
