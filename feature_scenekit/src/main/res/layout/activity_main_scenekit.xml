<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewCount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_scene"
        style="@style/ToolbarAppearance.Sandbox.Normal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/title_feature_scenekit" />

    <LinearLayout
        android:id="@+id/ll_imagekit_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/toolbar_scene"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/TextAppearance.Sandbox.Headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="@dimen/h16"
            android:layout_marginRight="@dimen/h16"
            android:text="@string/service_exp" />

        <TextView
            style="@style/TextAppearance.Sandbox.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/h16"
            android:text="@string/title_scene" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="@dimen/h16"
            android:layout_marginRight="@dimen/h16"
            android:src="@drawable/scene" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scene_view"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="@dimen/h16"
            android:layout_marginRight="@dimen/h16"
            android:text="@string/btn_scene_view"
            android:textColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ar_view"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/h16"
            android:text="@string/btn_ar_view"
            android:textColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_face_view"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/h16"
            android:text="@string/btn_face_view"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_render_view"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/h16"
            android:text="@string/btn_render_view"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fluid_simulation_view"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/h16"
            android:text="@string/btn_simulation_view"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            style="@style/TextAppearance.Sandbox.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginTop="@dimen/h16"
            android:layout_marginRight="@dimen/h16"
            android:layout_marginBottom="@dimen/h16"
            android:text="Note : "/>

        <TextView
            android:id="@+id/tv_scenekit_information"
            style="@style/TextAppearance.Sandbox.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h16"
            android:layout_marginRight="@dimen/h16"
            android:layout_marginBottom="@dimen/h16"
            android:text="@string/msg_kit_information"/>
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
