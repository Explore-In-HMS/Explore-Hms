<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hms.explorehms.huawei.feature_cameraengine.ui.common.AutoFitTextureView
        android:id="@+id/aftv_portrait_camera_engine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_show_introduction_portrait_camera_engine"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_introduction_portrait_camera_engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/ButtonAppearance.ExploreHMS.Normal"
            android:text="@string/txt_show_mode_intro_camera_engine"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </com.google.android.material.button.MaterialButton>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_mode_introduction_portrait_camera_engine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_portrait_mode_camera_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.ExploreHMS.Headline6"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="@string/txt_portrait_introduction_camera_engine"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/seperator_portrait_intro_camera_engine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray1CameraEngine"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_portrait_mode_camera_engine">
        </View>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_portrait_mode_intro_camera_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.ExploreHMS.Body1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="@string/msg_portrait_mode_camera_engine"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/seperator_portrait_intro_camera_engine"
            app:layout_constraintBottom_toTopOf="@+id/btn_hide_intro_portrait_camera_engine"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hide_intro_portrait_camera_engine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/ButtonAppearance.ExploreHMS.Normal"
            android:text="@string/txt_hide_intro_camera_engine"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_portrait_mode_intro_camera_engine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </com.google.android.material.button.MaterialButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_portrait_functions_plus_level_camera_engine"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintBottom_toTopOf="@+id/cl_portrait_functions_plus_camera_engine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/view_light_border_light_gray_camera_engine">

        <SeekBar
            android:id="@+id/seekbar_skin_smooth_portrait_camera_engine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            style="@style/ButtonAppearance.ExploreHMS.Normal">

        </SeekBar>

        <SeekBar
            android:id="@+id/seekbar_face_slender_portrait_camera_engine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            style="@style/ButtonAppearance.ExploreHMS.Normal">

        </SeekBar>

        <SeekBar
            android:id="@+id/seekbar_skin_tone_portrait_camera_engine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            style="@style/ButtonAppearance.ExploreHMS.Normal">

        </SeekBar>

        <SeekBar
            android:id="@+id/seekbar_body_shaping_portrait_camera_engine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            style="@style/ButtonAppearance.ExploreHMS.Normal">
        </SeekBar>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_portrait_functions_plus_camera_engine"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@+id/cl_portrait_functions_camera_engine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/view_light_border_light_gray_camera_engine">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_skin_smooth_portrait_camera_engine"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:cardCornerRadius="48dp"
            android:elevation="3dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.ExploreHMS.Body2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/txt_skin_smooth_camera_engine"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                </com.google.android.material.textview.MaterialTextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_face_slender_portrait_camera_engine"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:cardCornerRadius="48dp"
            android:elevation="3dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            app:layout_constraintTop_toTopOf="@+id/cv_skin_smooth_portrait_camera_engine"
            app:layout_constraintBottom_toBottomOf="@+id/cv_skin_smooth_portrait_camera_engine"
            app:layout_constraintLeft_toRightOf="@+id/cv_skin_smooth_portrait_camera_engine">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.ExploreHMS.Body2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/txt_face_slender_camera_engine"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                </com.google.android.material.textview.MaterialTextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_skin_color_portrait_camera_engine"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:cardCornerRadius="48dp"
            android:elevation="3dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            app:layout_constraintTop_toTopOf="@+id/cv_face_slender_portrait_camera_engine"
            app:layout_constraintBottom_toBottomOf="@+id/cv_face_slender_portrait_camera_engine"
            app:layout_constraintLeft_toRightOf="@+id/cv_face_slender_portrait_camera_engine">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.ExploreHMS.Body2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/txt_skin_color_camera_engine"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                </com.google.android.material.textview.MaterialTextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_body_shaping_portrait_camera_engine"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:cardCornerRadius="48dp"
            android:elevation="3dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            app:layout_constraintTop_toTopOf="@+id/cv_skin_color_portrait_camera_engine"
            app:layout_constraintBottom_toBottomOf="@+id/cv_skin_color_portrait_camera_engine"
            app:layout_constraintLeft_toRightOf="@+id/cv_skin_color_portrait_camera_engine">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.ExploreHMS.Body2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/txt_body_shaping_camera_engine"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                </com.google.android.material.textview.MaterialTextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_portrait_functions_camera_engine"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/view_light_border_light_gray_camera_engine">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_last_image_portrait_camera_engine"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="36dp"
            android:elevation="3dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            app:layout_constraintTop_toTopOf="@+id/cv_capture_image_portrait_camera_eng"
            app:layout_constraintBottom_toBottomOf="@+id/cv_capture_image_portrait_camera_eng"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <ImageView
                android:id="@+id/iv_last_photo_portrait_camera_engine"
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_view_camera_engine">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_settings_portrait_camera_engine"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="36dp"
            android:elevation="3dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            app:layout_constraintTop_toTopOf="@+id/cv_capture_image_portrait_camera_eng"
            app:layout_constraintBottom_toBottomOf="@+id/cv_capture_image_portrait_camera_eng"
            app:layout_constraintLeft_toRightOf="@+id/cv_last_image_portrait_camera_engine"
            app:layout_constraintRight_toLeftOf="@+id/cv_capture_image_portrait_camera_eng">

            <ImageView
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_settings_camera_engine">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_capture_image_portrait_camera_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="36dp"
            android:elevation="3dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_height="36dp"
                android:layout_width="36dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_camera_camera_engine"
                android:layout_margin="12dp">
            </ImageView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_zoom_in_portrait_camera_engine"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="36dp"
            android:elevation="3dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            app:layout_constraintTop_toTopOf="@+id/cv_capture_image_portrait_camera_eng"
            app:layout_constraintLeft_toRightOf="@+id/cv_capture_image_portrait_camera_eng"
            app:layout_constraintBottom_toBottomOf="@+id/cv_capture_image_portrait_camera_eng"
            app:layout_constraintRight_toLeftOf="@+id/cv_zoom_out_portrait_camera_engine">

            <ImageView
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_zoom_in_camera_engine">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_zoom_out_portrait_camera_engine"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="36dp"
            android:elevation="3dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/colorPrimaryCameraEngine"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@+id/cv_zoom_in_portrait_camera_engine"
            app:layout_constraintLeft_toRightOf="@+id/cv_zoom_in_portrait_camera_engine"
            app:layout_constraintBottom_toBottomOf="@+id/cv_zoom_in_portrait_camera_engine"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_height="32dp"
                android:layout_width="32dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_zoom_out_camera_engine"
                android:layout_weight="1">
            </ImageView>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_setting_level_portrait_camera_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/TextAppearance.ExploreHMS.Headline3"
        android:textColor="@color/colorWhiteCameraEngine"
        app:layout_constraintTop_toTopOf="@+id/aftv_portrait_camera_engine"
        app:layout_constraintBottom_toBottomOf="@+id/aftv_portrait_camera_engine"
        app:layout_constraintLeft_toLeftOf="@+id/aftv_portrait_camera_engine"
        app:layout_constraintRight_toRightOf="@+id/aftv_portrait_camera_engine"
        app:layout_constraintVertical_bias="0.4">
    </com.google.android.material.textview.MaterialTextView>

    <ImageView
        android:id="@+id/iv_double_tap_portrait_mode_camera_engine"
        android:layout_width="60dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/aftv_portrait_camera_engine"
        app:layout_constraintBottom_toBottomOf="@+id/aftv_portrait_camera_engine"
        app:layout_constraintLeft_toLeftOf="@+id/aftv_portrait_camera_engine"
        app:layout_constraintRight_toRightOf="@+id/aftv_portrait_camera_engine">
    </ImageView>

    <ProgressBar
        android:id="@+id/pb_portrait_mode_camera_engine"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:indeterminateDrawable="@drawable/custom_progress_bar_camera_engine"
        android:visibility="gone">
    </ProgressBar>

</androidx.constraintlayout.widget.ConstraintLayout>
