<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/volumeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:text="@string/video_set_volume"
            style="@style/TextAppearance.Sandbox.Body1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/set_volume_editText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="3"
            android:hint="@string/video_volume_range"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <Button
            android:id="@+id/set_volume_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:textAllCaps="false"
            android:text="@string/setting_ok" />

        <Button
            android:id="@+id/set_volume_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            style="@style/ButtonAppearance.Sandbox.Normal"
            android:textAllCaps="false"
            android:text="@string/setting_cancel" />

    </LinearLayout>
</LinearLayout>