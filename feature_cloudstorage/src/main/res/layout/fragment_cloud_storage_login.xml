<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CloudStorageLoginFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/h16"
        app:layout_constraintBottom_toTopOf="@+id/tvMustLoginText_cloudstorage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHeaderText_cloudstorage"
                style="@style/TextAppearance.ExploreHMS.Headline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/service_introduction"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginEnd="@dimen/h16"
                android:layout_marginTop="@dimen/h16"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvInfoText_cloudstorage"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/information_cloudstorage"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginEnd="@dimen/h16"
                android:layout_marginTop="@dimen/h16"
                app:layout_constraintTop_toBottomOf="@+id/tvHeaderText_cloudstorage"/>

            <ImageView
                android:id="@+id/ivImage_cloudstorage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="@dimen/h16"
                android:layout_marginEnd="@dimen/h16"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/img_cloudstorage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInfoText_cloudstorage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAdvantagesHeader_cloudstorage"
                style="@style/TextAppearance.ExploreHMS.Headline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/advantages"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="@dimen/h16"
                android:layout_marginEnd="@dimen/h16"
                app:layout_constraintTop_toBottomOf="@+id/ivImage_cloudstorage"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAdvantagesText_cloudstorage"
                style="@style/TextAppearance.ExploreHMS.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h16"
                android:layout_marginTop="@dimen/h16"
                android:layout_marginEnd="@dimen/h16"
                app:layout_constraintTop_toBottomOf="@+id/tvAdvantagesHeader_cloudstorage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvMustLoginText_cloudstorage"
        style="@style/TextAppearance.ExploreHMS.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/must_login_text_cloudstorage"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginTop="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:layout_marginBottom="@dimen/h16"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin_cloudstorage"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin_cloudstorage"
        style="@style/ButtonAppearance.ExploreHMS.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_with_huawei_id"
        android:layout_marginStart="@dimen/h16"
        android:layout_marginEnd="@dimen/h16"
        android:layout_marginBottom="@dimen/h16"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>